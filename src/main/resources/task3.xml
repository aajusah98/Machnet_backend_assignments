<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="student3" class="task3.Student">
        <constructor-arg name="studentId" value="3"/>
        <constructor-arg name="studentName" value="ajay"/>
        <constructor-arg name="address" ref="address2"/>
    </bean>
    <bean id="address2" class="task3.Address">
        <property name = "address" value = "Nawalpur"/>
    </bean>
</beans>